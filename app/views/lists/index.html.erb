<div class="container" >
  <%= render 'layouts/banner' %>

  <div class=" cards mt-5">
    <% @lists.each do |list| %>
      <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <%= link_to list_path(list) do %>
          <h3><%= list.name%></h3>
        <% end %>
        <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?" }, class:"absolute" do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="btn">
    <%= link_to "Create a new list", new_list_path%>
  </div>
</div>
